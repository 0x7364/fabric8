{
  "id": "fabric8-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "fabric8-config",
  "description": "Creates a hawtio console and private docker registry",
  "items": [
    {
      "apiVersion": "v1beta1",
      "containerPort": 0,
      "creationTimestamp": null,
      "id": "hawtio-service",
      "kind": "Service",
      "port": 8383,
      "selector": {
        "name": "hawtioPod"
      }
    },
    {
      "apiVersion": "v1beta1",
      "creationTimestamp": null,
      "desiredState": {
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "image": "fabric8/hawtio:latest",
                  "name": "hawtio-container",
                  "env": [
                    {
                      "name": "KUBERNETES_MASTER",
                      "value": "http://172.17.42.1:8080"
                    },
                    {
                      "name": "DOCKER_REGISTRY",
                      "value": "$REGISTRY_SERVICE_HOST:$REGISTRY_SERVICE_PORT"
                    },
                    {
                      "name": "hawtio_config_cloneOnStartup",
                      "value": "false"
                    },
                    {
                      "name": "TODO_hawtio_config_importURLs",
                      "value": "mvn:io.fabric8/wiki/2.0.1/zip"
                    }
                  ],
                  "ports": [
                    {
                      "hostPort": 8484,
                      "containerPort": 8080,
                      "protocol": "TCP"
                    }
                  ]
                }
              ],
              "id": "hawtioPod",
              "version": "v1beta1",
              "volumes": null
            },
            "restartpolicy": {}
          },
          "labels": {
            "name": "hawtioPod"
          }
        },
        "replicaSelector": {
          "name": "hawtioPod"
        },
        "replicas": 1
      },
      "id": "hawtioController",
      "kind": "ReplicationController",
      "labels": {
        "name": "hawtioController"
      }
    }
  ]
}
