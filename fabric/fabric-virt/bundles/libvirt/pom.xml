<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>bundles</artifactId>
        <groupId>org.fusesource.fabric.virt</groupId>
        <version>1.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.fusesource.fabric.virt.bundles</groupId>
    <artifactId>org.fusesource.fabric.virt.bundles.libvirt</artifactId>
    <version>${libvirt-bundle-version}</version>
    <packaging>bundle</packaging>
    <name>FuseSource :: Fabric :: Virt :: Bundles :: LibVirt</name>

    <properties>
        <pkgGroupId>org.libvirt</pkgGroupId>
        <pkgArtifactId>libvirt</pkgArtifactId>

        <fuse.osgi.import>*</fuse.osgi.import>
        <fuse.osgi.export>org.libvirt*;version="${project.version}"</fuse.osgi.export>
        <fuse.osgi.fragment.host>org.fusesource.fabric.virt.bundles.jna</fuse.osgi.fragment.host>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${pkgGroupId}</groupId>
            <artifactId>${pkgArtifactId}</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>${pkgGroupId}:${pkgArtifactId}</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <includes>
                                        <include>${pkgGroupId}:${pkgArtifactId}</include>
                                    </includes>
                                    <excludes>
                                        <exclude>**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
