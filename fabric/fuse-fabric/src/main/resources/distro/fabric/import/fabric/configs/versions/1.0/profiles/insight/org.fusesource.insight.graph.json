{
  "queries" : [ {
    "name" : "elasticsearch-health",
    "period": 1,
    "minPeriod": "default",
    "lock": "global",
    "requests" : [ {
      "name": "health",
      "obj" : "org.elasticsearch:service=restjmx",
      "oper": "exec",
      "args": [ "GET", "/_cluster/health", null ],
      "sig" : [ "java.lang.String", "java.lang.String", "java.lang.String" ]
    } ],
    "template": "{ \"timestamp\": @{toJson(result.timestamp)}, \"health\": @{result.results['health'].results[0].value} }"
  } ]
}