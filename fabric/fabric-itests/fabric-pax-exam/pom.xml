        </dependency>

        <!-- Jclouds Dependencies -->
        <dependency>
            <groupId>org.jclouds.provider</groupId>
            <artifactId>aws-ec2</artifactId>
            <version>${jclouds-version}</version>
            <scope>test</scope>
        </dependency>


        <!-- Fabric Dependencies  -->
        <dependency>
            <groupId>org.fusesource.fabric</groupId>
