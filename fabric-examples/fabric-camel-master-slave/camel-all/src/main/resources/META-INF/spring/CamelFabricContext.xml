    <route id="fabric-master">
      <from uri="fabric:cheese:jetty:http://0.0.0.0:9090/fabric"/>
      <log message="Exchange received from fabric : ${body}"/>
    </route>

    <route id="fabric-slave">
      <from uri="timer://foo?fixedRate=true&amp;period=10000"/>
