<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0" localization="OSGI-INF/metatype/metatype">

  <!-- Bridge object class definition -->
  <OCD id="org.fusesource.fabric.bridge.bridgeOCD" name="%bridge.name" description="%bridge.description">

    <!-- Bridge attributes -->
    <AD id="versionName" type="String" required="false"
        name="%versionName.name" description="%versionName.description"/>
    <AD id="gatewayProfileName" type="String" required="true"
        name="%gatewayProfileName.name" description="%gatewayProfileName.description"/>
    <AD id="gatewayConnectRetries" type="Integer" required="false"
        name="%gatewayConnectRetries.name" description="%gatewayConnectRetries.description"/>
    <AD id="gatewayStartupDelay" type="Integer" required="false"
        name="%gatewayStartupDelay.name" description="%gatewayStartupDelay.description"/>
    <AD id="inboundDestinationsRef" type="String" required="false"
        name="%inboundDestinationsRef.name" description="%inboundDestinationsRef.description"/>
    <AD id="outboundDestinationsRef" type="String" required="false"
        name="%outboundDestinationsRef.name" description="%outboundDestinationsRef.description"/>

    <!-- local broker attributes -->
    <AD id="localBroker.brokerUrl" type="String" required="false"
        name="%localBroker.brokerUrl.name" description="%localBroker.brokerUrl.description"/>
    <AD id="localBroker.clientId" type="String" required="false"
        name="%localBroker.clientId.name" description="%localBroker.clientId.description"/>
    <AD id="localBroker.userName" type="String" required="false"
        name="%localBroker.userName.name" description="%localBroker.userName.description"/>
    <AD id="localBroker.password" type="String" required="false"
        name="%localBroker.password.name" description="%localBroker.password.description"/>
    <AD id="localBroker.maxConnections" type="Integer" required="false"
        name="%localBroker.maxConnections.name" description="%localBroker.maxConnections.description"/>
    <AD id="localBroker.connectionFactoryRef" type="String" required="false"
        name="%localBroker.connectionFactoryRef.name" description="%localBroker.connectionFactoryRef.description"/>
    <AD id="localBroker.destinationResolverRef" type="String" required="false"
        name="%localBroker.destinationResolverRef.name" description="%localBroker.destinationResolverRef.description"/>

    <!-- exported broker attributes -->
    <AD id="exportedBroker.brokerUrl" type="String" required="false"
        name="%exportedBroker.brokerUrl.name" description="%exportedBroker.brokerUrl.description"/>
    <AD id="exportedBroker.clientId" type="String" required="false"
        name="%exportedBroker.clientId.name" description="%exportedBroker.clientId.description"/>
    <AD id="exportedBroker.userName" type="String" required="false"
        name="%exportedBroker.userName.name" description="%exportedBroker.userName.description"/>
    <AD id="exportedBroker.password" type="String" required="false"
        name="%exportedBroker.password.name" description="%exportedBroker.password.description"/>
    <AD id="exportedBroker.maxConnections" type="Integer" required="false"
        name="%exportedBroker.maxConnections.name" description="%exportedBroker.maxConnections.description"/>
    <AD id="exportedBroker.connectionFactoryRef" type="String" required="false"
        name="%exportedBroker.connectionFactoryRef.name" description="%exportedBroker.connectionFactoryRef.description"/>
    <AD id="exportedBroker.destinationResolverRef" type="String" required="false"
        name="%exportedBroker.destinationResolverRef.name" description="%exportedBroker.destinationResolverRef.description"/>

  </OCD>

  <!-- Gateway object class definition -->
  <OCD id="org.fusesource.fabric.bridge.gatewayOCD" name="%gateway.name" description="%gateway.description">

    <!-- Gateway attributes -->
    <AD id="versionName" type="String" required="false"
        name="%versionName.name" description="%versionName.description"/>
    <AD id="profileName" type="String" required="true"
        name="%profileName.name" description="%profileName.description"/>
    <AD id="inboundDestinationsRef" type="String" required="false"
        name="%inboundDestinationsRef.name" description="%inboundDestinationsRef.description"/>
    <AD id="outboundDestinationsRef" type="String" required="false"
        name="%outboundDestinationsRef.name" description="%outboundDestinationsRef.description"/>

    <!-- local broker attributes -->
    <AD id="localBroker.brokerUrl" type="String" required="false"
        name="%localBroker.brokerUrl.name" description="%localBroker.brokerUrl.description"/>
    <AD id="localBroker.clientId" type="String" required="false"
        name="%localBroker.clientId.name" description="%localBroker.clientId.description"/>
    <AD id="localBroker.userName" type="String" required="false"
        name="%localBroker.userName.name" description="%localBroker.userName.description"/>
    <AD id="localBroker.password" type="String" required="false"
        name="%localBroker.password.name" description="%localBroker.password.description"/>
    <AD id="localBroker.maxConnections" type="Integer" required="false"
        name="%localBroker.maxConnections.name" description="%localBroker.maxConnections.description"/>
    <AD id="localBroker.connectionFactoryRef" type="String" required="false"
        name="%localBroker.connectionFactoryRef.name" description="%localBroker.connectionFactoryRef.description"/>
    <AD id="localBroker.destinationResolverRef" type="String" required="false"
        name="%localBroker.destinationResolverRef.name" description="%localBroker.destinationResolverRef.description"/>

    <!-- exported broker attributes -->
    <AD id="exportedBroker.brokerUrl" type="String" required="false"
        name="%exportedBroker.brokerUrl.name" description="%exportedBroker.brokerUrl.description"/>
    <AD id="exportedBroker.clientId" type="String" required="false"
        name="%exportedBroker.clientId.name" description="%exportedBroker.clientId.description"/>
    <AD id="exportedBroker.userName" type="String" required="false"
        name="%exportedBroker.userName.name" description="%exportedBroker.userName.description"/>
    <AD id="exportedBroker.password" type="String" required="false"
        name="%exportedBroker.password.name" description="%exportedBroker.password.description"/>
    <AD id="exportedBroker.maxConnections" type="Integer" required="false"
        name="%exportedBroker.maxConnections.name" description="%exportedBroker.maxConnections.description"/>
    <AD id="exportedBroker.connectionFactoryRef" type="String" required="false"
        name="%exportedBroker.connectionFactoryRef.name" description="%exportedBroker.connectionFactoryRef.description"/>
    <AD id="exportedBroker.destinationResolverRef" type="String" required="false"
        name="%exportedBroker.destinationResolverRef.name" description="%exportedBroker.destinationResolverRef.description"/>

  </OCD>

  <!-- Bridge designate ties Bridge ocd to factory pid -->
  <Designate pid="org.fusesource.fabric.bridge" factoryPid="org.fusesource.fabric.bridge" bundle="*">
    <Object ocdref="org.fusesource.fabric.bridge.bridgeOCD"/>
  </Designate>

  <!-- Gateway designate ties Gateway ocd to factory pid -->
  <Designate pid="org.fusesource.fabric.gateway" factoryPid="org.fusesource.fabric.gateway" bundle="*">
    <Object ocdref="org.fusesource.fabric.bridge.gatewayOCD"/>
  </Designate>

</metatype:MetaData>
