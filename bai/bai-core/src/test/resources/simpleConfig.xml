<audit endpointUri="vm:audit"
       xmlns="http://fuse.fusesource.org/schema/bai" xmlns:c="http://camel.apache.org/schema/spring">
  <policy id="nonAuditContexts">
    <contexts>
      <exclude>
        <context bundle="*" name="audit*"/>
      </exclude>
    </contexts>
    <endpoints>
      <include>
        <endpoint>seda:*</endpoint>
      </include>
    </endpoints>
    <events>
      <exclude>
        <event eventType="FAILURE_HANDLED"/>
      </exclude>
    </events>
    <filter>
      <c:xpath>/person/@name = 'James'</c:xpath>
    </filter>
  </policy>
</audit>