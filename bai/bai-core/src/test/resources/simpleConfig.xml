<policySet xmlns="http://fuse.fusesource.org/schema/bai"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           endpointUri="vm:audit">
  <policy id="nonAuditContexts">
    <contexts>
      <exclude>
        <context bundle="*" name="audit*"/>
      </exclude>
    </contexts>
    <endpoints>
      <include>
        <endpoint>seda:*</endpoint>
      </include>
    </endpoints>
    <events>
      <exclude>
        <event eventType="FAILURE_HANDLED"/>
      </exclude>
    </events>
    <filter>
<!--
      <c:xpath>/person/@name = 'James'</c:xpath>
-->
      <xpath>/person/@name = 'James'</xpath>
    </filter>
  </policy>
</policySet>