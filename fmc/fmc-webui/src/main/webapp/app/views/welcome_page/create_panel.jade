.row
  .span8
    form
      .clearfix#global-resolver
        label(for="global-resolver") Global Resolver:
        .input
          select(name="global-resolver")
            option(value="localhostname") Local Hostname
            option(value="localip") Local IP
            option(vlaue="publichostname") Public Hostname
            option(value="publicip") Public IP
          span.help-block#global-resolver-help
      .clearfix#local-resolver
        label(for="local-resolver") Local Resolver:
        .input
          select(name="local-resolver")
            option(value="localhostname") Local Hostname
            option(value="localip") Local IP
            option(value="publichostname") Public Hostname
            option(value="publicip") Public IP
            option(value="manualip") Custom...
          span.help-block#local-resolver-help
      .clearfix#manualip-val.hide
        label(for="manualip-val") IP or Hostname:
        .input
          | <input name="manualip-val" type="text" class="hardware-id">
          span.help-block#manualip-val-help

