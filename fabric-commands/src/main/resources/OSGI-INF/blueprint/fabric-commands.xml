<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <reference id="zooKeeper" interface="org.linkedin.zookeeper.client.IZKClient" availability="optional"/>
    <reference id="configurationAdmin" interface="org.osgi.service.cm.ConfigurationAdmin" availability="optional"/>

    <bean id="agentService" class="org.fusesource.fabric.service.AgentServiceImpl">
        <property name="zooKeeper" ref="zooKeeper"/>
        <property name="configurationAdmin" ref="configurationAdmin"/>
    </bean>

    <service ref="agentService" auto-export="interfaces" />

    <bean id="zooKeeperClusterService" class="org.fusesource.fabric.service.ZooKeeperClusterServiceImpl">
        <property name="bundleContext" ref="blueprintBundleContext"/>
        <property name="zooKeeper" ref="zooKeeper"/>
        <property name="configurationAdmin" ref="configurationAdmin"/>
    </bean>

    <service ref="zooKeeperClusterService" auto-export="interfaces" />

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="fabric/zk-cluster">
            <action class="org.fusesource.fabric.commands.ZkCluster">
                <property name="service" ref="zooKeeperClusterService"/>
            </action>
        </command>
        <command name="fabric/create-agent">
            <action class="org.fusesource.fabric.commands.CreateAgent">
                <property name="agentService" ref="agentService"/>
            </action>
        </command>
        <command name="fabric/list-agents">
            <action class="org.fusesource.fabric.commands.ListAgents">
                <property name="agentService" ref="agentService"/>
            </action>
        </command>
        <command name="fabric/connect">
            <action class="org.fusesource.fabric.commands.Connect">
                <property name="agentService" ref="agentService"/>
            </action>
        </command>
    </command-bundle>

</blueprint>