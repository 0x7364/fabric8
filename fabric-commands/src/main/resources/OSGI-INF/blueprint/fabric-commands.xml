<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <reference id="fabricService" interface="org.fusesource.fabric.api.FabricService"/>
   <!--  <reference id="userService" interface="org.fusesource.fabric.api.UserService"/> -->
    <reference id="zooKeeperClusterService" interface="org.fusesource.fabric.api.ZooKeeperClusterService"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="fabric/zk-cluster">
            <action class="org.fusesource.fabric.commands.ZkCluster">
                <property name="service" ref="zooKeeperClusterService"/>
            </action>
        </command>
        <command name="fabric/create-agent">
            <action class="org.fusesource.fabric.commands.CreateAgent">
                <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <command name="fabric/list-agents">
            <action class="org.fusesource.fabric.commands.ListAgents">
                <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <command name="fabric/connect">
            <action class="org.fusesource.fabric.commands.Connect">
                <property name="fabricService" ref="fabricService"/>
            </action>
            <completers>
                <ref component-id="agentCompleter" />
                <null/>
            </completers>
        </command>
        <command name="fabric/domains">
            <action class="org.fusesource.fabric.commands.Domains">
                <property name="fabricService" ref="fabricService"/>
            </action>
            <completers>
                <ref component-id="agentCompleter" />
                <null/>
            </completers>
        </command>
        <command name="fabric/start">
            <action class="org.fusesource.fabric.commands.Start">
                <property name="fabricService" ref="fabricService"/>
            </action>
            <completers>
                <ref component-id="agentCompleter" />
                <null/>
            </completers>
        </command>
        <command name="fabric/stop">
            <action class="org.fusesource.fabric.commands.Stop">
                <property name="fabricService" ref="fabricService"/>
            </action>
            <completers>
                <ref component-id="agentCompleter" />
                <null/>
            </completers>
        </command>
        <command name="fabric/create-profile">
            <action class="org.fusesource.fabric.commands.CreateProfile">
                <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <command name="fabric/list-profiles">
            <action class="org.fusesource.fabric.commands.ListProfiles">
                <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <command name="fabric/display-profile">
            <action class="org.fusesource.fabric.commands.DisplayProfile">
                <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <command name="fabric/edit-profile">
            <action class="org.fusesource.fabric.commands.EditProfile">
              <property name="fabricService" ref="fabricService"/>
            </action>
        </command>
        <!-- User commands -->
<!--        <command name="fabric/list-users">
            <action class="org.fusesource.fabric.commands.ListUsers">
                <property name="userService" ref="userService"/>
            </action>
        </command>
        <command name="fabric/create-user">
            <action class="org.fusesource.fabric.commands.CreateUser">
                <property name="userService" ref="userService"/>
            </action>
        </command>
        <command name="fabric/remove-user">
            <action class="org.fusesource.fabric.commands.RemoveUser">
                <property name="userService" ref="userService"/>
            </action>
        </command>
        <command name="fabric/edit-user">
            <action class="org.fusesource.fabric.commands.EditUser">
                <property name="userService" ref="userService"/>
            </action>
        </command>-->
    </command-bundle>

    <bean id="agentCompleter" class="org.fusesource.fabric.commands.AgentCompleter">
        <property name="fabricService" ref="fabricService"/>
    </bean>


</blueprint>
