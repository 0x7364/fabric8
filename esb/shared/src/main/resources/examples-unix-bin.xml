<component>
    <fileSets>
        <!-- Copy over karaf demo to examples folder -->
        <fileSet>
            <directory>target/dependencies/unix/fuse-fabric-${project.version}/demos</directory>
            <outputDirectory>/examples/karaf-demos</outputDirectory>
            <lineEnding>unix</lineEnding>
            <includes>
              <include>pom.xml</include>
              <include>**/web/**</include>
            </includes>
        </fileSet>

        <!-- Copy over the examples -->
        <fileSet>
            <directory>target/dependencies/servicemix/unix/apache-servicemix-${smx.features.version}/examples</directory>
            <outputDirectory>/examples/</outputDirectory>
            <excludes>
                <exclude>pom.xml</exclude>  <!-- TODO: figure out how to combine this with the new examples' POMs -->
            </excludes>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <!-- Copy over the examples' files (except POM files and READMEs) -->
        <fileSet>
            <directory>../../examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <excludes>
                <exclude>pom.xml</exclude>
                <exclude>**/pom.xml</exclude>
                <exclude>**/target**</exclude>
            </excludes>
            <lineEnding>unix</lineEnding>
        </fileSet>


        <!-- Copy over the examples' pom.xml and README files (with filtering) -->
        <fileSet>
            <directory>../../examples</directory>
            <outputDirectory>/examples</outputDirectory>
            <includes>
                <include>**/pom.xml</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>${basedir}/target/shared/pom.xml</source>
            <outputDirectory>/examples</outputDirectory>
            <lineEnding>unix</lineEnding>
        </file>
    </files>

</component>
