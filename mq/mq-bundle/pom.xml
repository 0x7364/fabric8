<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.fusesource.mq</groupId>
        <artifactId>mq-project</artifactId>
        <version>7.0-SNAPSHOT</version>
    </parent>

    <artifactId>mq-bundle</artifactId>
    <version>7.0-SNAPSHOT</version>
    <packaging>bundle</packaging>

    <name>${project.artifactId}</name>
    <description>Fuse MQ :: Bundle</description>

    <properties>
    <!--              
		    com.thoughtworks.qdox*;-noimport:=true,
            org.codehaus.jettison*;-noimport:=true,
            com.thoughtworks.xstream*;-noimport:=true
     -->
        <fuse.osgi.export>
            org.apache.activemq*;version=${activemq-version};-noimport:=true,
            org.apache.activeio*;-noimport:=true,
            org.apache.xbean*;-noimport:=true,
        </fuse.osgi.export>
      <fuse.osgi.import.pkg>
      	!com.thoughtworks.qdox*,
      	!com.thoughtworks.xstream*,
      	!org.apache.commons.net.ftp*,
      	!org.apache.kahadb*,
      	!org.apache.derby*,
      	!org.apache.maven*,
      	!org.apache.tools.ant*,
      	!org.apache.xpath*,
      	!org.codehaus.jettison*,
      	!org.codehaus.jam*,
      	!org.objectweb.howl.log*,
      	!org.springframework.web.context.support*,
        *
      </fuse.osgi.import.pkg>

      <jettison-version>1.2</jettison-version>
      <xbean-version>3.7</xbean-version>
      <xstream-version>1.3.1</xstream-version>
    </properties>

    <dependencies>
      <dependency>
        <groupId>org.apache.activemq</groupId>
        <artifactId>activemq-core</artifactId>
        <version>${activemq-version}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.activemq</groupId>
        <artifactId>activeio-core</artifactId>
        <version>3.1.2</version>
        <scope>provided</scope>
      </dependency>
    <dependency>
      <groupId>org.apache.activemq</groupId>
      <artifactId>kahadb</artifactId>
      <version>${activemq-version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.xbean</groupId>
      <artifactId>xbean-spring</artifactId>
      <version>${xbean-version}</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <groupId>qdox</groupId>
          <artifactId>qdox</artifactId>
        </exclusion>
        </exclusions>
      </dependency>
      <dependency>
          <groupId>qdox</groupId>
          <artifactId>qdox</artifactId>
          <!-- 
          <version>1.6.3</version>
           -->
          <version>1.6.1</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.codehaus.jettison</groupId>
        <artifactId>jettison</artifactId>
        <version>${jettison-version}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>com.thoughtworks.xstream</groupId>
        <artifactId>xstream</artifactId>
        <version>${xstream-version}</version>
        <scope>provided</scope>
      </dependency>
    </dependencies>

    <build>
        <plugins>

        </plugins>
    </build>

</project>
