<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.fusesource.fabric.fab.tests</groupId>
    <artifactId>tests-project</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>

  <artifactId>fab-sample-camel-osgi-share</artifactId>
  <packaging>jar</packaging>

  <name>${project.artifactId}</name>
  <description>FAB :: Sample :: Camel OSGi Share</description>

  <dependencies>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-core</artifactId>
      <version>${camel-version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.camel</groupId>
      <artifactId>camel-core-osgi</artifactId>
      <version>${camel-version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>


  <profiles>
    <profile>
      <id>fab</id>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <index>true</index>
            <manifestEntries>
              <Bundle-Activator>org.fusesource.fabric.fab.sample.camel.Activator</Bundle-Activator>
              <Fabric-Provided-Dependency></Fabric-Provided-Dependency>
              <!--
              <Fabric-Dependency-Exclude>org.osgi:*</Fabric-Dependency-Exclude>

              <Import-Package>org.osgi.framework</Import-Package>
              -->
              <!-- lets import the OSGi packages directly as the org.osgi bundle has unresolved exported packages -->
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.fusesource.mvnplugins</groupId>
        <artifactId>maven-fab-plugin</artifactId>
        <version>1.16-SNAPSHOT</version>
        <configuration>
          <descriptor>
            <Long-Description></Long-Description>
            <!-- <Endorsed-Extensions>
              ${project.groupId}:artifact:${project.version}
            </Endorsed-Extensions>
            <Default-Extensions>name</Default-Extensions> -->
          </descriptor>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>    </profile>
  </profiles>
</project>